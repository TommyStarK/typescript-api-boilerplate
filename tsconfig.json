{
  "compilerOptions": {
    "target": "es2021",
    "lib": ["es2021"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@app/*": ["./*"]
    },
    "types": [
      "reflect-metadata",
      "node",
      "express",
      "inversify",
      "jsonwebtoken",
      "mongodb",
      "multer",
      "pg",
      "jest"
    ],
    "typeRoots": [
      "./custom_typings",
      "./node_modules/@types"
    ],
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "tsconfig-paths.js"
  ],
  "exclude": [
    "coverage",
    "node_modules"
  ]
}
